<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="app.coinverse.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_profileFragment"
            app:destination="@id/profileFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/homeFragment" />
        <action
            android:id="@+id/action_homeFragment_to_contentFragment"
            app:destination="@id/savedContentFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="app.coinverse.user.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile">
        <argument
            android:name="user"
            app:argType="com.google.firebase.auth.FirebaseUser" />
        <action
            android:id="@+id/action_profileFragment_to_archivedContentFragment"
            app:destination="@id/archivedContentFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_pop_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/savedContentFragment"
        android:name="app.coinverse.content.ContentFragment"
        android:label="SavedContentFragment">
        <argument
            android:name="feedType"
            android:defaultValue="app.carpecoin.Enums.FeedType.SAVED.name"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/archivedContentFragment"
        android:name="app.coinverse.content.ContentFragment"
        android:label="ArchivedContentFragment">
        <argument
            android:name="feedType"
            android:defaultValue="app.carpecoin.Enums.FeedType.ARCHIVED.name"
            app:argType="string" />
    </fragment>
</navigation>