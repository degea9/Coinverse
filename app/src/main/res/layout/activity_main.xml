<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewmodel"
            type="app.carpecoin.MainViewModel" />

        <variable
            name="exchange"
            type="app.carpecoin.Enums.Exchange" />
    </data>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeToRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.constraint.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_main_constraint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="app.carpecoin.MainActivity">

            <TextView
                android:id="@+id/pricePair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@{String.format(@string/price_pair_format, viewmodel.pricePair.BASE_CURRENCY, viewmodel.pricePair.QUOTE_CURRENCY)}"
                android:textSize="@dimen/price_pair_text_size"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/timeframe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/timeframe_text_size"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pricePair" />

            <com.jjoe64.graphview.GraphView
                android:id="@+id/priceGraph"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toTopOf="@+id/guideline"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pricePair" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@+id/guideline"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.constraint.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.6" />

            <ImageView
                android:id="@+id/legend_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_small"
                android:src="@drawable/ic_vpn_key_black_24dp"
                app:layout_constraintBottom_toBottomOf="@id/percentDifference"
                app:layout_constraintLeft_toLeftOf="parent" />

            <TextView
                android:id="@+id/asks_legend"
                style="@style/PriceGraphLegendTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/asks"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/legend_image"
                app:layout_constraintLeft_toRightOf="@id/legend_image"
                app:layout_constraintTop_toTopOf="@id/legend_image" />

            <TextView
                android:id="@+id/bids_legend"
                style="@style/PriceGraphLegendTheme"
                android:text="@string/bids"
                app:layout_constraintBottom_toBottomOf="@+id/legend_image"
                app:layout_constraintLeft_toRightOf="@id/asks_legend"
                app:layout_constraintTop_toTopOf="@id/asks_legend" />

            <TextView
                android:id="@+id/max_legend"
                style="@style/PriceGraphLegendTheme"
                android:drawableTop="@drawable/ic_arrow_drop_up_black_24dp"
                android:text="@string/max"
                app:layout_constraintBottom_toBottomOf="@+id/legend_image"
                app:layout_constraintLeft_toRightOf="@id/bids_legend" />

            <TextView
                android:id="@+id/min_legend"
                style="@style/PriceGraphLegendTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_arrow_drop_down_black_24dp"
                android:text="@string/min"
                app:layout_constraintBottom_toBottomOf="@+id/legend_image"
                app:layout_constraintLeft_toRightOf="@id/max_legend" />

            <TextView
                android:id="@+id/percentDifference"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_small"
                android:clickable="true"
                android:drawableLeft="@drawable/ic_arrow_drop_up_black_24dp"
                android:text="@{String.valueOf(String.format(@string/percent_difference_format, viewmodel.percentDifferenceLiveData.percent))}"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/priceGraph" />

            <android.support.v7.widget.CardView
                android:id="@+id/card_price_graph"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/price_graph_card_corner_radius"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/percentDifference">

                <android.support.constraint.ConstraintLayout
                    android:id="@+id/card_price_constraint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/coinbaseToggle"
                        style="@style/ButtonTheme"
                        android:onClick="@{() -> viewmodel.addOrRemoveEnabledExchanges(exchange.GDAX)}"
                        android:text="@string/coinbase"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toLeftOf="@id/binanceToggle" />

                    <TextView
                        android:id="@+id/binanceToggle"
                        style="@style/ButtonTheme"
                        android:onClick="@{() -> viewmodel.addOrRemoveEnabledExchanges(exchange.BINANCE)}"
                        android:text="@string/binance"
                        app:layout_constraintLeft_toRightOf="@+id/coinbaseToggle"
                        app:layout_constraintRight_toLeftOf="@id/geminiToggle" />

                    <TextView
                        android:id="@+id/geminiToggle"
                        style="@style/ButtonTheme"
                        android:onClick="@{() -> viewmodel.addOrRemoveEnabledExchanges(exchange.GEMINI)}"
                        android:text="@string/gemini"
                        app:layout_constraintLeft_toRightOf="@id/binanceToggle"
                        app:layout_constraintRight_toLeftOf="@id/kucoinToggle" />

                    <TextView
                        android:id="@+id/kucoinToggle"
                        style="@style/ButtonTheme"
                        android:onClick="@{() -> viewmodel.addOrRemoveEnabledExchanges(exchange.KUCOIN)}"
                        android:text="@string/kucoin"
                        app:layout_constraintLeft_toRightOf="@id/geminiToggle"
                        app:layout_constraintRight_toLeftOf="@id/krakenToggle" />

                    <TextView
                        android:id="@+id/krakenToggle"
                        style="@style/ButtonTheme"
                        android:onClick="@{() -> viewmodel.addOrRemoveEnabledExchanges(exchange.KRAKEN)}"
                        android:text="@string/kraken"
                        app:layout_constraintLeft_toRightOf="@+id/kucoinToggle"
                        app:layout_constraintRight_toRightOf="parent" />

                    <TextView
                        android:id="@+id/baseToQuoteAsk"
                        style="@style/PriceGraphMinAndMaxTheme"
                        android:drawableTop="@drawable/ic_arrow_drop_down_black_24dp"
                        android:text="@{String.valueOf(String.format(@string/base_to_quote_order_format, viewmodel.percentDifferenceLiveData.baseToQuoteAsk))}" />

                    <TextView
                        android:id="@+id/baseToQuoteBid"
                        style="@style/PriceGraphMinAndMaxTheme"
                        android:drawableTop="@drawable/ic_arrow_drop_up_black_24dp"
                        android:text="@{String.valueOf(String.format(@string/base_to_quote_order_format, viewmodel.percentDifferenceLiveData.baseToQuoteBid))}" />

                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>

        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
</layout>